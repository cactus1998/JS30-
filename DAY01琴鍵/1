    <script>
        // å®šç¾©ä¸€å€‹å‡½æ•¸ï¼Œç”¨æ–¼æ’­æ”¾éŸ³æ•ˆ
        function playSound(e) {
            // ä½¿ç”¨ e.keyCode å–å¾—è¢«æŒ‰ä¸‹çš„æŒ‰éµç¢¼
            const audio = document.querySelector(`audio[data-key="${e.keyCode}"]`)
            const key = document.querySelector(`.key[data-key="${e.keyCode}"]`)
            // å¦‚æœæ‰¾ä¸åˆ°ç›¸æ‡‰çš„éŸ³æ•ˆå°±è¿”å›
            if (!audio) return
            // å°‡éŸ³æ•ˆçš„ currentTime è¨­ç½®ç‚º 0ï¼Œä»¥ä¾¿åœ¨æ¯æ¬¡æŒ‰ä¸‹æŒ‰éµæ™‚éƒ½å¯ä»¥é‡æ–°æ’­æ”¾éŸ³æ•ˆ
            audio.currentTime = 0
            // æ’­æ”¾éŸ³æ•ˆ
            audio.play()
            // ç‚ºç›¸æ‡‰çš„æŒ‰éµå…ƒç´ æ·»åŠ  playing é¡ï¼Œç”¨æ–¼è¦–è¦ºæ•ˆæœ
            key.classList.add('playing')
        };

        // å®šç¾©ä¸€å€‹å‡½æ•¸ï¼Œç”¨æ–¼ç§»é™¤ playing
        function removeTransition(e) {
            // å¦‚æœè§¸ç™¼ transitionend äº‹ä»¶çš„å±¬æ€§ä¸æ˜¯ transform
            if (e.propertyName !== 'transform') return
            // ç§»é™¤ playing
            this.classList.remove('playing')
        }

        // é¸å–æ‰€æœ‰å…·æœ‰ .key çš„å…ƒç´ 
        const keys = document.querySelectorAll('.key')
        // å°æ¯å€‹ .key å…ƒç´ æ·»åŠ  transitionend äº‹ä»¶ç›£è½å™¨ï¼Œç•¶ CSS transition å®Œæˆæ™‚è§¸ç™¼ removeTransition å‡½æ•¸
        keys.forEach(key => key.addEventListener('transitionend', removeTransition))

        // æ·»åŠ  keydown äº‹ä»¶ç›£è½å™¨ï¼Œç•¶æŒ‰ä¸‹éµç›¤æ™‚è§¸ç™¼ playSound å‡½æ•¸
        window.addEventListener('keydown', playSound)
    </script>
